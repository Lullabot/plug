/**
 * Implements hook_menu().
 */
function plugins_example_menu() {
  $items['plugins'] = array(
    'title' => 'Plugins',
    'page callback' => 'plugins_example_test_page',
    'access callback' => TRUE,
    'type' => MENU_CALLBACK,
  );
  return $items;
}

/**
 * Page callback to test the plugins.
 */
function plugins_example_test_page() {
  $namespaces = new \ArrayObject(array(
    'Drupal\plugins_example' => drupal_get_path('module', 'plugins_example') . '/src',
  ));
  $manager = new Drupal\plugins_example\NamePluginManager($namespaces, new \DrupalDatabaseCache('name'));
  foreach ($manager->getDefinitions() as $id => $plugin) {
    dpm($manager->createInstance($id));
  }
  return 'Hello world!';
}
